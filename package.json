{
  "name": "my-flower-pots",
  "version": "1.0.0",
  "description": "My Flower Pots - 花盆管理应用",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "upload-static": "node scripts/upload-static.js",
    "upload-wrangler": "node upload-static-wrangler.js",
    "upload": "npm run build-css && npm run upload-wrangler",
    "deploy-all": "npm run upload-static && npm run deploy",
    "deploy-full": "npm run upload-wrangler && npm run deploy",
    "test-api": "node test-auth-api.js",
    "test-db": "node test-db-migration.js",
    "test-new": "node test-new-apis.js",
    "verify": "node verify-migration.js",
    "debug": "node debug-update-pot.js",
    "migrate": "node migrate-pots-to-d1.js",
    "build-css": "npx tailwindcss -i ./frontend/css/tailwind-input.css -o ./frontend/css/tailwind-built.css --config tailwind.config.cjs --minify",
    "watch-css": "npx tailwindcss -i ./frontend/css/tailwind-input.css -o ./frontend/css/tailwind-built.css --config tailwind.config.cjs --watch"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "better-sqlite3": "^12.5.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250213.0",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3",
    "wrangler": "^4.60.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "flower-pots",
    "plants",
    "cloudflare",
    "workers",
    "d1",
    "r2"
  ],
  "author": "My Flower Pots Team",
  "license": "MIT"
}